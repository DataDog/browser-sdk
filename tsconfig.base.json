    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "moduleResolution": "node",
    "module": "ES2020",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2018",
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,

    "types": [],
