{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2024",
    "lib": ["ES2024"],
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "allowImportingTsExtensions": true
  },
  "include": ["**/*.ts", "**/*.js"]
}
