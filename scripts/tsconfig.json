{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2020",
    "lib": ["ES2021"],
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts", "**/*.js"]
}
