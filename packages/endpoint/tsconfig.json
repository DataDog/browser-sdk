{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "rootDir": "./src/",
    "module": "preserve",
    "target": "ES2024",
    "lib": ["ES2024", "DOM"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": []
}
