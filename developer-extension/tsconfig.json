{
  "extends": "../tsconfig.browser.json",
  "compilerOptions": {
    "module": "ES6",
    "target": "esnext",
    "lib": ["ES2022", "DOM"],
    "types": ["chrome", "react", "react-dom", "jasmine"],
    "rootDir": "./src/",
    "outDir": "./esm/",
    "declarationDir": "./types/"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
    "./src/**/*.specHelper.ts",
    "./src/**/*.specHelper.tsx",
  ],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/logs" },
    { "path": "../packages/rum" },
  ]
}
