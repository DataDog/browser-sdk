// This tsconfig is only used for tooling (ex: typecheck in code editors / lint)
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["jasmine"],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "exclude": [
    // Generated files
    "packages/*/cjs",
    "packages/*/esm",
    "packages/*/bundle",
    "**/webpack.*.ts",

    // Those folders have their own tsconfig.json
    "scripts",
    "test/e2e",
    "test/apps",
    "developer-extension",
    "rum-events-format",
    "performances"
  ]
}
