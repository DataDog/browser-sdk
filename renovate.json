{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [":dependencyDashboard", "group:monorepos", "group:recommended"],
  "labels": ["dependencies"],
  "commitMessagePrefix": "ðŸ‘· ",
  "minimumReleaseAge": "7 days",
  "internalChecksFilter": "strict",
  "prCreation": "not-pending",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 1,
  "ignoreDeps": ["registry.ddbuild.io/dd-octo-sts"],
  "schedule": ["every weekend"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "skipInstalls": false,
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["!karma-webpack", "!@playwright/test"]
    },
    {
      "matchFileNames": ["test/apps/vanilla/**"],
      "matchDepNames": ["typescript"],
      "enabled": false
    },
    {
      "matchFileNames": ["test/apps/react-router-v6-app/**"],
      "matchDepNames": ["react-router-dom"],
      "enabled": false
    }
  ]
}
