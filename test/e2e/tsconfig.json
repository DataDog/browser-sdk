{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "preserve",
    "types": ["node", "ajv"],
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
