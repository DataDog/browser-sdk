{
  "name": "Datadog RUM Testing Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Injects Datadog RUM into every page to inspect data being sent.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/npm-content-script.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ]
}
