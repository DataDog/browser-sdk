{
  "name": "browser-sdk",
  "description": "browser SDK",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:bundle": "lerna run build:bundle --stream",
    "format": "prettier --check \"**/*.{ts,js,json,md,yml,html}\"",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json && tslint -c ./tslint.json -p ./test/e2e/scenario/tsconfig.json",
    "dev": "ENV=development node test/server/server.js",
    "release": "lerna version --exact",
    "publish:npm": "TARGET_DATACENTER=us TARGET_ENV=production VERSION=release yarn build && lerna publish from-package",
    "fail": "./scripts/fail.sh",
    "test": "yarn test:unit",
    "test:unit": "karma start ./test/unit/karma.local.conf.js",
    "test:unit:cbt": "node ./scripts/cbt-with-retry.js karma start test/unit/karma.cbt.conf.js",
    "test:e2e": "yarn run test:e2e:bundle",
    "test:e2e:bundle": "TARGET_ENV=e2e-test yarn build && E2E_MODE=bundle wdio test/e2e/wdio.local.conf.js",
    "test:e2e:npm": "TARGET_ENV=e2e-test yarn build && (cd test/app && rm -rf node_modules && yarn && yarn build) && E2E_MODE=npm wdio test/e2e/wdio.local.conf.js",
    "test:e2e:async": "TARGET_ENV=e2e-test yarn build && E2E_MODE=async wdio test/e2e/wdio.local.conf.js",
    "test:e2e:cbt": "TARGET_ENV=e2e-test yarn build && node ./scripts/cbt-with-retry.js wdio test/e2e/wdio.cbt.conf.js",
    "test:compat:tsc": "yarn build && (cd test/app && rm -rf node_modules && yarn && yarn compat:tsc) || yarn fail 'typescript 3.0 compatibility broken'",
    "test:compat:ssr": "yarn build && (cd test/app && rm -rf node_modules && yarn && yarn compat:ssr) || yarn fail 'server side rendering compatibility broken'"
  },
  "devDependencies": {
    "@types/jasmine": "3.3.13",
    "@types/request": "2.48.2",
    "@wdio/cli": "5.16.9",
    "@wdio/crossbrowsertesting-service": "5.16.9",
    "@wdio/jasmine-framework": "5.16.5",
    "@wdio/local-runner": "5.18.4",
    "@wdio/selenium-standalone-service": "5.16.10",
    "@wdio/spec-reporter": "5.16.5",
    "@wdio/sync": "5.16.9",
    "body-parser": "1.19.0",
    "codecov": "3.6.5",
    "cors": "2.8.5",
    "express": "4.17.1",
    "istanbul-instrumenter-loader": "3.0.1",
    "jasmine-core": "3.4.0",
    "js-polyfills": "0.1.42",
    "karma": "4.2.0",
    "karma-cbt-launcher": "bcaudan/karma-cbt-launcher#remove-node-6-support",
    "karma-chrome-launcher": "3.0.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-jasmine": "2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript-preprocessor2": "1.2.1",
    "karma-webpack": "4.0.2",
    "lerna": "3.18.1",
    "morgan": "1.9.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "replace-in-file": "4.2.0",
    "request": "2.88.0",
    "sinon": "7.3.2",
    "string-replace-loader": "2.2.0",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4",
    "webdriverio": "5.16.7",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.6",
    "webpack-dev-middleware": "3.7.2"
  }
}
