{
  "name": "browser-agent",
  "version": "0.0.1",
  "description": "browser agent",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js --mode=production",
    "dev": "webpack-dev-server --mode=development",
    "format": "prettier --check \"**/*.{ts,js,json,md,yml}\" \"!dist/**\"",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json && tslint -c ./tslint.json -p ./test/e2e/scenario/tsconfig.json && tslint -c ./tslint.json -p ./test/e2e/server/tsconfig.json",
    "test": "karma start ./test/unit/karma.unit.conf.js",
    "test:cbt": "karma start ./test/unit/karma.cbt.conf.js",
    "test:e2e": "TARGET_ENV=e2e-test yarn build && wdio test/e2e/wdio.conf.js"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/cors": "2.8.5",
    "@types/express": "4.17.0",
    "@types/jasmine": "3.3.13",
    "@types/request": "2.48.2",
    "@wdio/cli": "5.11.6",
    "@wdio/jasmine-framework": "5.11.0",
    "@wdio/local-runner": "5.11.6",
    "@wdio/selenium-standalone-service": "5.11.2",
    "@wdio/spec-reporter": "5.11.6",
    "@wdio/sync": "5.11.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "istanbul-instrumenter-loader": "3.0.1",
    "jasmine-core": "3.4.0",
    "js-polyfills": "0.1.42",
    "karma": "4.2.0",
    "karma-cbt-launcher": "bcaudan/karma-cbt-launcher#remove-node-6-support",
    "karma-chrome-launcher": "3.0.0",
    "karma-coverage-istanbul-reporter": "2.0.5",
    "karma-jasmine": "2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript-preprocessor2": "1.2.1",
    "karma-webpack": "4.0.2",
    "lerna": "3.18.1",
    "prettier": "1.18.2",
    "request": "2.88.0",
    "sinon": "7.3.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-no-unused-expression-chai": "0.1.4",
    "typescript": "3.5.3",
    "typescript-tslint-plugin": "0.5.4",
    "webdriverio": "5.11.6",
    "webpack": "4.36.1",
    "webpack-cli": "3.3.6",
    "webpack-dev-server": "3.7.2"
  }
}
