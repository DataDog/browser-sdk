{
  "manifest_version": 3,
  "name": "My React Extension",
  "version": "1.0",
  "description": "A basic Chrome extension with a popup and options page built with React",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "rum.png"
  },
  "options_ui": {
    "page": "public/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "dist/service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "cookies"
  ],
    "host_permissions": [
      "<all_urls>"
    ]
}