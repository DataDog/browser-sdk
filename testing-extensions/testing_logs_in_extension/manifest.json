{
  "name": "Datadog RUM Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Injects Datadog RUM into every page to inspect data being sent.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "options_page": "src/form.html",
  "action": {
    "default_title": "Datadog RUM Extension",
    "default_popup": "src/popup.html",
    "default_icon": "./images/rum.png"
  }
}
